<!DOCTYPE html>
<html>
  <head>
    <title>

    </title>
    <style>
      body{
        background-image: url('/images/back2.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: fixed;
      }
      .formback{
          width: 348px;
    
          background-color: white;
          border-radius: 10px;
          margin-left: 600px;
          margin-top: 100px;
      }
      .adjust{
        padding-left: 20px;
        padding-right: 20px;
        padding-bottom: 20px;
      }
      .icon{
        display: flex;
        justify-content: center;
        align-items: center;
        padding-top: 20px;
        padding-bottom: 40px;
      }
      .signup{
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .loginbutton{
        display: flex;
        justify-content: center;
        align-items: center;
      }
      p:hover {
        color: green;
      }
      .formback2{
        width: 348px;
        
        border-radius: 10px;
        margin-left: 200px;
        margin-top: 10px;
        padding-top: 10px;
      }
      .message{
        font-family: cursive;
        font-size: large;
        color: green;
        font-weight: bold;
        padding-top: 10px;
      }

    </style>
     <!-- Compiled and minified CSS -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

     <!-- Compiled and minified JavaScript -->
     <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
 
     <link href="https://fonts.googleapis.com/css2?family=Grape+Nuts&display=swap" rel="stylesheet">
 
     <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
 
     <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>
  <body>
    <div class="formback">
        <div class="adjust">
            <div class="icon">
                <img src="/images/logo.png" alt="" width="150px">
            </div>
            <form action="/quiz/changepass" method="post">
            
              <div class="input-field col s12">
                <i class="material-icons prefix">person</i>
                <input id="adminid" type="email" class="validate" name="adminid">
                <label for="adminid">your email</label>
              </div>

              <div class="input-field col s12">
              <i class="material-icons prefix">password</i>
              <input id="currentpassword" type="password" class="validate" name="currentpassword">
              <label for="currentpassword">Current password</label>
              </div>
    
            <div class="input-field col s12">
              <i class="material-icons prefix">password</i>
              <input id="newpassword" type="password" class="validate" name="newpassword">
              <label for="newpassword">new password </label>
            </div>
            <div class="loginbutton" >
              <button class="btn waves-effect waves-light" type="submit" name="action" style="background-color:#142e5c;">change Password
                <i class="material-icons right">send</i>
              </button>
            </div>
            <div class="message loginbutton">
                <%=msg%>
            </div>
            </form> 
    </div>
    
  </body>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

</html>
